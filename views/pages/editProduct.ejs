<%- include('../partials/header'); -%>

    <div class="container">
        <a onclick="window.history.back();" class="btn btn-light" style="margin-bottom:-55px">Back</a>
        <div class="card border-success mt-5">
            <div class="card-header bg-primary text-white ">
                <h1>Edit Product</h1>
            </div>
            <div class="card-body">
                <form action="/product/edit" method="POST">
                    <input type="hidden" name="reference" value="<%-object.product[0].reference-%>">
                    <div class="form-group">
                        <label for="productName">Product Name</label>
                        <input type="text" id="productName" class="form-control" name="productName" value="<%- object.product[0].productName -%>">
                    </div>
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select class="form-control" id="category" name="category" selected="<%- object.product[0].categoryId -%>">
                        <% object.categories.forEach((category, index)=>{%>
                        <option value="<%- category.id -%> "
                            <%- category.id===object.product[0].categoryId ? 'selected' : '' -%>>
                            <%- category.categoryName -%> </option>
                        <% }) %>
                    </select>
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="text" id="price" class="form-control" name="price" value="<%- object.product[0].unitPrice -%>">
                    </div>
                    <div class="form-group">
                        <label for="qte">Quantity</label>
                        <input type="number" id="qte" class="form-control" name="qte" value="<%- object.product[0].quantity -%>">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" id="image" class="form-control" name="img" accept="images/*">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" name="submit"><i class="fa fa-save"></i>
                        Save</button>
                        <button type="reset" class="btn btn-danger"><i class="fa fa-undo"></i> Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('../partials/footer'); -%>